# Uncomment the next line to define a global platform for your project
platform :ios, '16.0'

target 'FirebaseStarterApp' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for FirebaseStarterApp

  # Facebook SDK - Updated to latest version
  pod 'FBSDKLoginKit', '~> 18.0'
  
  # Networking
  pod 'Alamofire', '~> 5.10'
  
  # Firebase SDK - Updated to latest stable version
  pod 'Firebase/Core', '~> 11.5.0'
  pod 'Firebase/Auth', '~> 11.5.0'
  pod 'Firebase/Firestore', '~> 11.5.0'

end
